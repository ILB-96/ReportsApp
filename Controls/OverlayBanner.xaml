<UserControl x:Class="Reports.Controls.OverlayBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             IsHitTestVisible="False">

    <UserControl.Resources>
        <Storyboard x:Key="ShowStoryboard">
            <DoubleAnimation Storyboard.TargetName="Banner"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="0.85" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="Banner"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="-24" To="0" Duration="0:0:0.18"/>
        </Storyboard>

        <Storyboard x:Key="HideStoryboard">
            <DoubleAnimation Storyboard.TargetName="Banner"
                             Storyboard.TargetProperty="Opacity"
                             From="0.85" To="0" Duration="0:0:0.20"/>
            <DoubleAnimation Storyboard.TargetName="Banner"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="-24" Duration="0:0:0.20"/>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="Banner"
            Visibility="Collapsed"
            CornerRadius="8"
            Padding="10"
            Margin="0,8,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Opacity="0"
            RenderTransformOrigin="0.5,0">
        <Border.RenderTransform>
            <TranslateTransform Y="-24"/>
        </Border.RenderTransform>

        <StackPanel Orientation="Horizontal" Margin="6,0">
            <TextBlock x:Name="Icon"
                       FontSize="14"
                       Margin="0,0,6,0"/>
            <TextBlock x:Name="Message"
                       FontSize="14"/>
        </StackPanel>
    </Border>
</UserControl>
