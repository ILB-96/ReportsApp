<Page x:Class="Reports.SignatureForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             FlowDirection="RightToLeft"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d"
             >
    <Grid Margin="5" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid HorizontalAlignment="Center" Margin="0 16 0 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ui:TextBlock Text="אוטותל" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0"
                          Grid.Column="0"/>

            <ui:ToggleSwitch x:Name="ToggleOption"
                             Width="50"
                             Height="28"
                             IsChecked="False"
                             VerticalAlignment="Center"
                             Grid.Column="1"/>

            <ui:TextBlock Text="גוטו"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          Margin="10,0,0,0"
                          Grid.Column="2"/>
        </Grid>

        <!-- Card with form -->
        <ui:Card Grid.Row="1" Padding="20" Margin="0,0,0,10" Background="Transparent">
            <StackPanel Orientation="Vertical" >

                <!-- Section Title -->
                <ui:TextBlock Text="פרטי דו״ח"
                           Margin="0,0,0,0"
                           />
                <ui:TextBox x:Name="For"
                            PlaceholderText="לכבוד"
                         Margin="0,5" 
                         />
                <!-- Numeric Fields -->
                <ui:TextBox x:Name="Report"
                            PlaceholderText="מס' דוח"
                         PreviewTextInput="NumberOnly" 
                         Margin="0,5" />
                <ui:TextBox x:Name="Car"
                            PlaceholderText="מס' רכב"
                         PreviewTextInput="NumberOnly" 
                         Margin="0,5"
                         />

                <!-- Section Title -->
                <ui:TextBlock Text="פרטי לקוח"
                           Margin="0,10,0,0"/>
                <!-- Regular Text Fields -->
                <ui:TextBox x:Name="Name" 
                            PlaceholderText="שם לקוח"
                         Margin="0,5" 
                         />
                <ui:TextBox x:Name="Id" 
                            PlaceholderText="מס' ת.ז"
                         Margin="0,5" 
                         />
                <ui:TextBox x:Name="License"
                            PlaceholderText="מס' רישיון"
                         Margin="0,5" />
                <ui:TextBox x:Name="Address"
                            PlaceholderText="כתובת"
                         Margin="0,5" />

                <!-- Submit Button -->
                <ui:Button Content="צור טופס חתימה"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Stretch"
                        IsDefault="True"
                        Click="Submit_Click"
                        Appearance="Primary"
                        FontWeight="Bold"/>
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>
