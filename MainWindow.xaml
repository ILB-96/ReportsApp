<ui:FluentWindow x:Class="Reports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:reports="clr-namespace:Reports"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        FlowDirection="RightToLeft"
        Title="FinesDesk"
        Width="300"
        MinHeight="450"
        SizeToContent="Height"
        d:DesignHeight="450"
        d:DesignWidth="350"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TitleBar -->
        <ui:TitleBar Grid.Row="0" />

        <!-- NavigationView -->
        <ui:NavigationView x:Name="RootNavigation"
                           Grid.Row="1"
                           Margin="10"
                           AlwaysShowHeader="False"
                           PaneDisplayMode="LeftFluent"
                           FlowDirection="RightToLeft">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="חתימה"
                                       Tag="SignatureForm"
                                       TargetPageType="{x:Type reports:SignatureForm}"
                                       NavigationCacheMode="Enabled"
                                       FocusVisualStyle="{x:Null}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Signature16"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="לקוח"
                                       Tag="CreateCustomerRequest"
                                       TargetPageType="{x:Type reports:CreateCustomerRequest}"
                                       NavigationCacheMode="Enabled"
                                       FocusVisualStyle="{x:Null}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Mail16"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem Content="הסכם"
                                       Tag="AgreementForm"
                                       TargetPageType="{x:Type reports:AgreementForm}"
                                       NavigationCacheMode="Enabled"
                                       FocusVisualStyle="{x:Null}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Document16"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="הזמנה"
                                       Tag="ReservationForm"
                                       TargetPageType="{x:Type reports:ReservationForm}"
                                       NavigationCacheMode="Enabled"
                                       FocusVisualStyle="{x:Null}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="VehicleCarParking16"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
